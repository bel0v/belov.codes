---
import '@fontsource-variable/work-sans'
import '@fontsource-variable/source-code-pro'
import '@fontsource-variable/sono'
import '@fontsource-variable/space-grotesk'
import 'styles/global.css'
// import sonoWoff2 from '@fontsource-variable/sono/files/sono-latin-wght-normal.woff2'

interface Props {
  title: string
  description?: string
}
const { title, description } = Astro.props

const isProd = import.meta.env.PROD
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Yegor Belov | {title}</title>
  <slot name="head" />
  {description && <meta name="description" content={description} />}
  <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="shortcut icon" href="/favicon.ico" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <link rel="manifest" href="/site.webmanifest" />
  <script src="scripts/theme-toggle"></script>
  {
    isProd && (
      <script
        defer
        src="/events.js"
        data-website-id="0a3f6ca5-29f5-43fe-96db-f7b921f39b68"
      />
    )
  }
  <!-- <link
    rel="preload"
    as="font"
    type="font/woff2"
    href={sonoWoff2}
    crossorigin="anonymous"
  /> -->
</head>
